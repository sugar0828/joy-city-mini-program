<view>
  <van-cell-group>
    <van-field value="{{ name }}" label="姓名" left-icon="user-o" placeholder="请输入姓名" />
    <van-field value="{{ phone }}" label="手机号" left-icon="phone-o" placeholder="请输入手机号" />
    <van-field value="{{ address }}" label="地址" left-icon="location-o" placeholder="请输入地址" />
  </van-cell-group>

  <view style="padding: 20px;">
    <view>
      <text style="color: #333;">性别</text>
    </view>
    <van-divider />
    <van-radio-group value="{{ sex }}" bind:change="onChangeSex">
      <van-radio name="1" checked-color="#07c160">男</van-radio>
      <van-divider />
      <van-radio name="2" checked-color="#07c160">女</van-radio>
    </van-radio-group>
    <van-divider />
  </view>

  <view class="padding20">
    <checkbox-group bindchange="checkboxChange">
      <label>
        <checkbox checked="{{agree}}" />
        <text style="color: #444;">阅读并同意</text>
      </label>
      <text style="color: #1989fa;" bindtap="toPointDesc">《积分章程》</text>
    </checkbox-group>
  </view>

  <view class="padding20">
    <button type="primary" bindtap="submitRegister">提交</button>
  </view>

  <van-toast id="van-toast" />
</view>